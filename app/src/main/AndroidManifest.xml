<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.mustafaali.devtiles">

    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.DUMP" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ToggleUsbDebuggingService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_toggle_usb_debugging"
            android:label="@string/label_toggle_usb_debugging"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.ToggleKeepScreenOnService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_toggle_keep_screen_on"
            android:label="@string/label_keep_screen_on"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.ToggleShowTapsService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_toggle_show_taps"
            android:label="@string/label_toggle_show_touches"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.ToggleDemoModeService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_toggle_demo_mode"
            android:label="@string/label_toggle_demo_mode"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>